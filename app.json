{
  "expo": {
    "name": "Ski'UT",
    "slug": "app-SkiUt-P25",
    "version": "2.0.2", 
    "orientation": "portrait",
    "newArchEnabled": true,
    "icon": "./assets/images/icone.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/logo.png",
      "resizeMode": "cover",
      "backgroundColor": "#aad1cd"
    },
    "ios": {
      "bundleIdentifier": "fr.utc.assos.skiutc",
      "supportsTablet": true,
      "buildNumber": "2.0.2",
      "infoPlist": {
        "NSCameraUsageDescription": "Autoriser Ski'Ut à accéder à la Caméra.",
        "NSPhotoLibraryUsageDescription": "Autoriser Ski'Ut à accéder à votre galerie pour sélectionner des images.", 
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Autoriser Ski'Ut à accéder à la localisation pour calculer votre vitesse de glisse.",
        "NSLocationWhenInUseUsageDescription": "Nous utilisons votre localisation lorsque l'application est en cours d'utilisation pour calculer votre vitesse de glisse."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.png",
        "backgroundColor": "#aad1cd"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "fr.utc.assos.skiutc"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/logo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/logo.png",
          "color": "#aad1cd"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Autoriser Ski'Ut à accéder à votre galerie pour sélectionner des images.",
          "cameraPermission": "Autoriser Ski'Ut à accéder à la Caméra."
        }
      ],
      "expo-font",
      "expo-secure-store"
    ],
    "assetBundlePatterns": [
      "**/*"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "notification": {
      "icon": "./assets/images/logo.png",
      "color": "#FF231F7C"
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "1a47d5a3-8db0-4c7c-b0d5-5cd84f660041"
      }
    }
  }
}