{
  "expo": {
    "name": "Ski'UT",
    "slug": "app-skiut-2026",
    "version": "1.0.0",
    "orientation": "portrait",
    "newArchEnabled": true,
    "icon": "./assets/images/icone.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/icone.png",
      "resizeMode": "contain",
      "backgroundColor": "#aad1cd"
    },
    "ios": {
      "bundleIdentifier": "fr.utc.assos.skiutc",
      "supportsTablet": true,
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "Autoriser Ski'Ut à accéder à la Caméra.",
        "NSPhotoLibraryUsageDescription": "Autoriser Ski'Ut à accéder à votre galerie pour sélectionner des images.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Autoriser Ski'Ut à accéder à la localisation pour calculer votre vitesse de glisse.",
        "NSLocationWhenInUseUsageDescription": "Nous utilisons votre localisation lorsque l'application est en cours d'utilisation pour calculer votre vitesse de glisse."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.png",
        "backgroundColor": "#aad1cd"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "fr.utc.assos.skiutc",
      "icon": "./assets/images/logo.png"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/logo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icone.png",
          "color": "#aad1cd"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Autoriser Ski'Ut à accéder à votre galerie pour sélectionner des images.",
          "cameraPermission": "Autoriser Ski'Ut à accéder à la Caméra."
        }
      ],
      "expo-font",
      "expo-secure-store"
    ],
    "assetBundlePatterns": [
      "**/*"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "notification": {
      "icon": "./assets/images/icone.png",
      "color": "#023c69",
      "iosDisplayInForeground": true
    },
    "androidStatusBar": {
      "barStyle": "dark-content",
      "backgroundColor": "#aad1cd"
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "f03f1a56-74c7-4c87-a0b2-60b420f7de94"
      }
    },
    "owner": "skiutcapp"
  }
}
